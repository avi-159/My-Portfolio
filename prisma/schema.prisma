
// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ContactMessage {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  message   String
  createdAt DateTime @default(now())
}

model Project {
  id        Int       @id @default(autoincrement())
  slug      String    @unique
  title     String
  summary   String
  year      Int
  cover     String?
  metrics   Metric[]
  tags      ProjectTag[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Metric {
  id        Int     @id @default(autoincrement())
  label     String
  value     String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId Int
}

model Tag {
  id    Int          @id @default(autoincrement())
  name  String       @unique
  projects ProjectTag[]
}

model ProjectTag {
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId Int
  tag       Tag     @relation(fields: [tagId], references: [id], onDelete: Cascade)
  tagId     Int

  @@id([projectId, tagId])
}
